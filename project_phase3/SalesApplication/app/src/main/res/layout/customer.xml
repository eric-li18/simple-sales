<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/almond"
  android:orientation="vertical">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical">
      <TextView
        android:id="@+id/employee_greeting"
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/futuramedium"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="36sp" />
    </LinearLayout>

    <ImageView
      android:id="@+id/customer_cart"
      android:layout_width="45dp"
      android:layout_height="35dp"
      android:layout_marginLeft="15dp"
      android:layout_marginTop="15dp"
      android:background="@drawable/salesapplogo"
      android:clickable="true" />
    <ImageView
      android:id="@+id/customer_logout"
      android:layout_width="35dp"
      android:layout_height="35dp"
      android:layout_marginStart="15dp"
      android:layout_marginTop="15dp"
      android:clickable="true"
      app:srcCompat="@drawable/logout" />
  </LinearLayout>

  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
      android:layout_width="35dp"
      android:layout_height="35dp"
      android:layout_marginStart="25dp"
      android:layout_marginTop="8dp"
      android:clickable="true"
      android:src="@drawable/arrow" />
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="10dp"
      android:layout_marginTop="10dp"
      android:fontFamily="@font/futurabook"
      android:text="@string/restore"
      android:textSize="20sp" />
  </LinearLayout>


  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="615dp"
    android:layout_gravity="bottom"
    android:layout_marginTop="25dp"
    android:background="@drawable/rounded_30dp"
    android:backgroundTint="@color/white"
    android:baselineAligned="false"
    android:orientation="vertical">
    <ScrollView
      android:layout_width="match_parent"
      android:layout_height="570dp"
      android:layout_marginTop="25dp"
      android:background="@drawable/rounded_30dp">
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
          android:id="@+id/available_items"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="30dp"
          android:fontFamily="@font/futuramedium"
          android:text="@string/items"
          android:textColor="@color/black"
          android:textSize="35sp" />
        <FrameLayout
          android:id="@+id/customer_frame1"
          android:layout_width="match_parent"
          android:layout_height="match_parent">
          <LinearLayout
            android:id="@+id/customer_item1"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/border"
            android:clickable="true"
            android:orientation="horizontal">
            <LinearLayout
              android:layout_width="135dp"
              android:layout_height="match_parent"
              android:layout_marginStart="100dp"
              android:orientation="vertical">
              <TextView
                android:id="@+id/customer_itemname1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/futurabook"
                android:textColor="@color/black"
                android:textSize="20sp" />
            </LinearLayout>
            <TextView
              android:id="@+id/customer_dollar_sign1"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:fontFamily="@font/futuramedium"
              android:text="@string/dollar_sign"
              android:textColor="@color/black"
              android:textSize="25sp" />
            <TextView
              android:id="@+id/customer_itemprice1"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center_vertical"
              android:layout_marginRight="10dp"
              android:layout_weight="0.65"
              android:fontFamily="@font/futuramedium"
              android:textColor="@color/black"
              android:textSize="25sp" />
          </LinearLayout>
          <ImageView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginStart="30dp"
            android:src="@mipmap/fishing_rod"/>
        </FrameLayout>
        <FrameLayout
          android:id="@+id/customer_frame2"
          android:layout_width="match_parent"
          android:layout_height="match_parent">
          <LinearLayout
            android:id="@+id/customer_item2"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="30dp"
