              android:textSize="25sp" />
          </LinearLayout>
          <ImageView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginStart="30dp"
            android:src="@mipmap/hockey_stick" />
        </FrameLayout>


        <FrameLayout
          android:id="@+id/customer_frame5"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_marginBottom="100dp">
          <LinearLayout
            android:id="@+id/customer_item5"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/border"
            android:clickable="true"
            android:orientation="horizontal">
            <LinearLayout
              android:layout_width="135dp"
              android:layout_height="match_parent"
              android:layout_marginStart="100dp"
              android:orientation="vertical">
              <TextView
                android:id="@+id/customer_itemname5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/futurabook"
                android:textColor="@color/black"
                android:textSize="20sp" />
            </LinearLayout>
            <TextView
              android:id="@+id/customer_dollar_sign5"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:fontFamily="@font/futuramedium"
              android:text="@string/dollar_sign"
              android:textColor="@color/black"
